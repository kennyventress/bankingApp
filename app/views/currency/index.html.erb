
<div>
  <h2>Convert Currency</h2>
  <%= form_with url: currency_converter_convert_path, method: :get, local: true do |form| %>
    <div>
      <%= form.label :amount, "Amount" %>
      <%= form.number_field :amount, step: :any, required: true %>
    </div>
    
    <div>
      <%= form.label :from_currency, "From Currency" %>
      <%= form.select :from_currency, CurrencyConverter::CURRENCIES, prompt: "Select Currency", required: true %>
    </div>
    
    <div>
      <%= form.label :to_currency, "To Currency" %>
      <%= form.select :to_currency, CurrencyConverter::CURRENCIES, prompt: "Select Currency", required: true %>
    </div>
    
    <div>
      <%= form.submit "Convert" %>
    </div>
  <% end %>
</div>

<% if @converted_amount %>
  <h3>Converted Amount: <%= @converted_amount %></h3>
<% end %>