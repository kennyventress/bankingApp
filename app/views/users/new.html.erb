<style>
h1 {text-align: left;}
p {text-align: center;}
div {text-align: center;}
</style>

<p>Fill in the form below to create a new user account.</p>

<div class= "center-form">
<%= form_for @user do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %><br>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <%= f.submit "Create User", class: "form-button" %>
<% end %>
<p>Already have an account? <%= link_to 'Log In', '/login' %></
</div>