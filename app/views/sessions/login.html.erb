    <% if session[:user_id] %>
    <% user = User.find_by(id: session[:user_id]) %>
    <li class="navbar-right">
        <span class="navbar-user">
        Logged in as <%= user&.username || "Unknown" %>
        </span>
        <%= button_to "Log Out", logout_path, method: :post, class: "nav-form-button" %>
